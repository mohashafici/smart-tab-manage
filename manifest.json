{
  "manifest_version": 3,
  "name": "Smart Tab Manager",
  "version": "1.3",
  "description": "Manage and organize your Chrome tabs efficiently.",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
